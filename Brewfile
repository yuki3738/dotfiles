# Update Homebrew
update

# Upgrade Formulas
upgrade

# Install HomebrewCask
tap caskroom/cask
tap caskroom/versions
install brew-cask

####################
# Install Packages #
####################

## Font
tap sanemat/font
install ricty

## Shell
install zsh
install zsh-completions
install terminal-notifier

## Git
install git
install hub

## Ruby
install rbenv
install ruby-build

## SQL
install mysql
install sqlite

## Editor
cask install --force sublime-text3

## IDE
cask install --force rubymine

## Utils
install the_silver_searcher
cask install --force google-japanese-ime
cask install --force dropbox

########################
# Install Applications #
########################

## Browser
cask install --force google-chrome
cask install --force firefox

# Remove out	dated versions
cleanup
cask cleanup
