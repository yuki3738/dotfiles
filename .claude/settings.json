{
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "sh $HOME/.claude/hooks/notify-completion.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "tool-use-requested",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude Codeがツールの使用許可を求めています\" with title \"Claude Code\" sound name \"Glass\"'"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "sh $HOME/.claude/hooks/notify-selection.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "slack@claude-plugins-official": true,
    "skill-creator@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true
}
